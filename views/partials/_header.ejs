<header>
  <form method="GET" action="/">
    <button class="logo-btn">
      <span id="logo">Finterest</span>
    </button>
  </form>
  <form class="form-inline" method="GET" action="/search">
    <div class="form-group mb-2">
      <input searchTopic="<%= topicSearched %>" id="search-bar" class="form-inline" type="text" name="searchResources" placeholder="Search resources..." />
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <ul class="navbar-nav">
  <% if (!activeUser) { %>
    <li class="nav-item">
      <form method="GET" action="/login">
        <button type="submit" class="btn" id="login">Login</button>
      </form>
    </li>
    <li class="nav-item">
      <form method="GET" action="/register">
        <button type="submit" class="btn" id="register">Register</button>
      </form>
    </li>
    <% } else if (activeUser) { %>
      <li class="nav-item" id="welcome-msg">
        <h6>Welcome <%= activeUser.name %></h6>
      </li>
      <li class="nav-item">
        <form method="GET" action="/newresource">
          <button type="submit" class="btn">New Resource</button>
        </form>
      </li>
      <li class="nav-item">
        <form method="GET" action="/myResources">
          <button type="submit" class="btn">My Resources</button>
        </form>
      </li>
      <li class="nav-item">
        <form method="POST" action="/logout">
          <button type="submit" class="btn" id="logout">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
</header>
